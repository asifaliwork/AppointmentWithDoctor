@model AppointmentScheduler.Models.ViewModels.RegisterModel

@if (User.IsInRole(AppointmentScheduler.Utilities.Helper.Admin))
{
    <h4>Register an admin Account</h4>
}
else

{
    <h4>Create a new Account</h4>
}

<h2>Sign Up</h2>
<form id="account" method="post" asp-action="Register" asp-controller="Account">
    <h2>Create New Account</h2>
    <br />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="Name"></label>
        <div class="col-md-6">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="EmailAddress"></label>
        <div class="col-md-6">
            <input asp-for="EmailAddress" class="form-control" />
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="Password"></label>
        <div class="col-md-6">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="ConfirmPassword"></label>
        <div class="col-md-6">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="RoleName"></label>
        <div class="col-md-6">
            <select asp-for="RoleName" asp-items="@AppointmentScheduler.Utilities.Helper.GetRoleforDropDown(User.IsInRole(AppointmentScheduler.Utilities.Helper.Admin))" class="form-control select2"></select>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    @*<div class="form-group row">
        <div class="col-md-10 offset-md-2 checkbox">
            <label asp-for="RememberMe"></label>
            <input asp-for="RememberMe" />
        </div>
    </div>*@
    <br/>
    <div class="form-group row">
        <div class="col-3 offset-2">
            <input type="submit" value="Register" class="btn btn-success" /> 
        </div>
        @if (User.IsInRole(AppointmentScheduler.Utilities.Helper.Admin))
        {
            <div class="col-3 offset-2">
                <a asp-controller="Appointment" asp-action="Index" style="margin-left: -220px;" class="btn btn-primary text-center text-decoration-none form-control">Back to Dashboard</a>
            </div>
        }
    </div>
    
</form>

@section Scripts{
    @{
        <partial name="_validationscriptspartial" />
    }
}